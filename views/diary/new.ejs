<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center;color:white;">Create a New PhotoDiary</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div style="color:white;" class="form-group">
                    <label style="color:white;" for="image">Image</label>
                    <input class="btn btn-default" type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
          
        </div>
    </div>
