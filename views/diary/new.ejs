<% include ../partials/header %>
<div class="container">
    <div style="margin-top:80px;" class="row">
                <h1 style="text-align:center;color:white;">Create a Photo Diary</h1>
                <div style="width:30%;margin:25px auto;">
                        <form action="/campgrounds" method="POST">
                            <div class="form-group">
                           <input class="form-control" type="text" name="name" placeholder="title" required>
                            </div>
                             <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image link" required>
                            </div>
                            <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="About photo" required>
                            </div>
                             <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                            </div>
                        </form>
                        <a class="btn btn-xs btn-success"  href="/diary">Go back</a>
                 </div>
    </div>
</div>
<% include ../partials/footer %>