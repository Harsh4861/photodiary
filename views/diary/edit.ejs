                            <input class="form-control" type="text" name="diary[description]" value="<%= campground.description %>" required>
                            </div>
                             <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                            </div>
                        </form>
                        <a class="btn btn-xs btn-success" href="/diary">Go back</a>
                 </div>
    </div>
</div>
